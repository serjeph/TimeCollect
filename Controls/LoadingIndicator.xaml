<UserControl x:Class="TimeCollect.Controls.LoadingIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TimeCollect"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="800">
    <Grid>
        
        <TextBlock Text="Collecting Timesheet Data..." HorizontalAlignment="Center" VerticalAlignment="Top" Width="600" TextAlignment="Center" Height="40" Margin="10,5"/>
        <ProgressBar IsIndeterminate="True" VerticalAlignment="Bottom"/>
    </Grid>
</UserControl>
